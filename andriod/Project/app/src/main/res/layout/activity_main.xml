<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <!-- ðŸ”¹ Top empty band -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4" />

    <!-- Top: Live sensor data (replaces old Space) -->
    <LinearLayout
        android:id="@+id/live_panel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/live_acc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ACC: X=-, Y=-, Z=-"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/live_gyro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GYRO: X=-, Y=-, Z=-"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/live_rot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ROT: X=-, Y=-, Z=-"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/live_mag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MAG: X=-, Y=-, Z=-"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Keypad: 2/3 of screen -->
    <GridLayout
        android:id="@+id/keypad"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:columnCount="3"
        android:rowCount="4"
        android:useDefaultMargins="true"
        android:alignmentMode="alignMargins"
        android:padding="5dp">

        <!-- 1 (row 0, col 0) -->
        <LinearLayout
            android:id="@+id/layout_zone1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="#FFE0B2"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@android:color/black"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- 2 (row 0, col 1) -->
        <LinearLayout
            android:id="@+id/layout_zone2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="#B2DFDB"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textColor="@android:color/black"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- 3 (row 0, col 2) -->
        <LinearLayout
            android:id="@+id/layout_zone3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="#C5CAE9"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="@android:color/black"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- 4 (row 1, col 0) -->
        <LinearLayout
            android:id="@+id/layout_zone4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="#FFCDD2"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textColor="@android:color/black"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- 5 (row 1, col 1) -->
        <LinearLayout
            android:id="@+id/layout_zone5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="#D1C4E9"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textColor="@android:color/black"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- 6 (row 1, col 2) -->
        <LinearLayout
            android:id="@+id/layout_zone6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="#B2EBF2"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:textColor="@android:color/black"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- 7 (row 2, col 0) -->
        <LinearLayout
            android:id="@+id/layout_zone7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="#F0F4C3"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:textColor="@android:color/black"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- 8 (row 2, col 1) -->
        <LinearLayout
            android:id="@+id/layout_zone8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="#E1BEE7"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:textColor="@android:color/black"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- 9 (row 2, col 2) -->
        <LinearLayout
            android:id="@+id/layout_zone9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="#FFECB3"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:textColor="@android:color/black"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- 0 (row 3, col 1) -->
        <LinearLayout
            android:id="@+id/layout_zone0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="#FFECB3"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@android:color/black"
                android:textStyle="bold" />
        </LinearLayout>

    </GridLayout>

    <!-- Bottom empty space -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4" />

</LinearLayout>
